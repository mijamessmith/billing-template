{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "moduleResolution": "node",
    "lib": ["es2020", "dom", "esnext.asynciterable"],
    "rootDir": "./src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}